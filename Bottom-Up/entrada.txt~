
def int calculadora(int operacao, int v1, int v2):



    se operacao == 1:
    
    
    
        retorna v1 + v2
        
        
        
    senaose operacao == 2:
    
    
    
        retorna v1 - v2
        
        
        
    senaose operacao == 3:
    
    
    
        retorna v1 * v2
        
        
        
    senao:
    
    
    
        retorna v1 / v2
        
        
        
    fimretorna 0 
fim

int resultado
resultado = calculadora(soma, 3, 6) 
